{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        "build/**",
        "api/**",
        "public/build/**",
        "storybook-static/**",
        ".contentlayer/**"
      ],
      "dependsOn": ["@kampus/prisma#prisma:generate", "^build"]
    },
    "dev": {
      "dependsOn": ["@kampus/prisma#prisma:generate"],
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:push": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "docker:dev": {
      "cache": false
    },
    "@kampus-apps/gql#*": {
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "@kampus-apps/gql#dev": {
      "dependsOn": ["@kampus/prisma#prisma:generate", "@kampus/sozluk-content#build"]
    },
    "@kampus-apps/gql#build": {
      "cache": false,
      "dependsOn": ["@kampus/prisma#prisma:generate", "@kampus/sozluk-content#build"]
    },
    "@kampus/kampus#*": {
      "env": ["NODE_ENV", "NEXT_PUBLIC_GQL_URL", "RESEND_API_KEY", "NEXTAUTH_URL"]
    },
    "@kampus/kampus#dev": {
      "dependsOn": ["@kampus-apps/gql", "@kampus/pasaport"]
    },
    "@kampus/pasaport#*": {
      "env": ["NODE_ENV", "NEXTAUTH_URL", "DATABASE_URL"]
    },
    "@kampus/next-auth#*": {
      "env": [
        "AUTH_COOKIE_DOMAIN",
        "GITHUB_ID",
        "GITHUB_SECRET",
        "DISCORD_ID",
        "DISCORD_SECRET",
        "TWITCH_ID",
        "TWITCH_SECRET",
        "SECRET",
        "VERCEL_URL"
      ]
    },
    "@kampus/relay": {
      "env": ["NEXT_PUBLIC_GQL_URL"]
    }
  }
}
