{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "build/**", "api/**", "public/build/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "docker:dev": {
      "cache": false
    },
    "@kampus-apps/pano#*": {
      "env": ["NODE_ENV", "DATABASE_URL", "SESSION_SECRET"]
    },
    "@kampus-apps/home#*": {
      "env": ["NODE_ENV", "SESSION_SECRET"]
    }
  }
}
