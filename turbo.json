{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        "build/**",
        "api/**",
        "public/build/**",
        "storybook-static/**",
        ".contentlayer/**"
      ],
      "dependsOn": ["@kampus/prisma#prisma:generate", "^build"]
    },
    "dev": {
      "dependsOn": ["@kampus/prisma#prisma:generate"],
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:push": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "docker:dev": {
      "cache": false
    },
    "@kampus-apps/gql#*": {
      "env": ["NODE_ENV", "DATABASE_URL", "NEXTAUTH_URL", "KAMPUS_ENV"]
    },
    "@kampus-apps/gql#dev": {
      "dependsOn": [
        "@kampus/prisma#prisma:generate",
        "@kampus/sozluk-content#build",
        "@kampus/tr-odin-project-content#build"
      ]
    },
    "@kampus-apps/gql#build": {
      "cache": false,
      "dependsOn": [
        "@kampus/prisma#prisma:generate",
        "@kampus/sozluk-content#build",
        "@kampus/tr-odin-project-content#build"
      ]
    },
    "@kampus-apps/kampus#*": {
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_GQL_URL",
        "RESEND_API_KEY",
        "NEXTAUTH_URL",
        "NEXT_PUBLIC_KAMPUS_ENV",
        "VERCEL_URL"
      ]
    },
    "@kampus-apps/kampus#build": {
      "dependsOn": ["@kampus/prisma#prisma:generate"]
    },
    "@kampus/next-auth#*": {
      "env": [
        "AUTH_COOKIE_DOMAIN",
        "GITHUB_ID",
        "GITHUB_SECRET",
        "DISCORD_ID",
        "DISCORD_SECRET",
        "TWITCH_ID",
        "TWITCH_SECRET",
        "SECRET",
        "KAMPUS_ENV"
      ]
    },
    "@kampus/relay": {
      "env": ["NEXT_PUBLIC_GQL_URL"]
    }
  }
}
