{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "dependsOn": [
        "^prisma:generate",
        "^build"
      ]
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:push": {
      "cache": false
    },
    "test": {
      "outputs": [
        "coverage/**"
      ],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "docker:dev": {
      "cache": false
    },
    "@kampus-apps/pano#*": {
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "SESSION_SECRET"
      ]
    },
    "@kampus-apps/home#*": {
      "env": [
        "NODE_ENV",
        "SESSION_SECRET",
        "TWITCH_CLIENT_ID",
        "TWITCH_CLIENT_SECRET"
      ]
    }
  }
}
