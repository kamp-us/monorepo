{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "build/**", "api/**", "public/build/**", "storybook-static/**"],
      "dependsOn": ["^prisma:generate", "^build"]
    },
    "dev": {
      "dependsOn": ["^prisma:generate"],
      "cache": false
    },
    "prisma:generate": {
      "cache": false
    },
    "prisma:push": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "docker:dev": {
      "cache": false
    },
    "@kampus-apps/kampus#*": {
      "env": ["NODE_ENV", "GQL_URL", "RESEND_API_KEY"]
    },
    "@kampus-apps/pano#*": {
      "env": ["NODE_ENV", "DATABASE_URL", "SESSION_SECRET"]
    },
    "@kampus-apps/home#*": {
      "env": ["NODE_ENV", "SESSION_SECRET", "TWITCH_CLIENT_ID", "TWITCH_CLIENT_SECRET"]
    },
    "@kampus/next-auth#*": {
      "env": ["GITHUB_ID", "GITHUB_SECRET", "DISCORD_ID", "DISCORD_SECRET", "SECRET"]
    }
  }
}
